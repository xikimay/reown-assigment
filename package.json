{
  "name": "hormesis-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=web & cd apps/api && vercel dev --local-config vercel.json",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "check-types": "turbo run check-types",
    "deploy": "turbo run deploy && vercel --prod",
    "db:migrate": "cd packages/database && supabase db push",
    "db:reset": "cd packages/database &&  supabase db reset",
    "db:start": "cd packages/database && supabase start",
    "db:stop": "cd packages/database &&  supabase stop",
    "api:start": "cd apps/api && vercel dev --local-config vercel.json",
    "web:start": "turbo run dev --filter=web"
  },
  "devDependencies": {
    "dotenv": "^17.0.0",
    "dotenv-cli": "^7.4.2",
    "supabase": "^1.200.3",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
